<template name="rp-item-card">
  <navigator wx:if="{{name}}" url="{{url}}" data-params="{{params}}">
    <view class="rp-item-card-container">
      <view class="left-cover">
        <image class="image" src="{{cover}}" style="width: {{w||'120rpx'}};height:{{h||'120rpx'}} ;" mode="aspectFill" />
      </view>
      <view class="right-info">
        <view class="name single-line-overflow ">
          {{name||'因失误成就歌手名场面'}}
        </view>
        <view class="bot-info ">
          <view class="bot-info-l single-line-overflow">
            {{infoL||'by 油条 Music'}}
          </view>
          <view class="bot-info-r">
            {{infoR||'昨天 19:06'}}
          </view>
        </view>
      </view>
    </view>
  </navigator>
</template>