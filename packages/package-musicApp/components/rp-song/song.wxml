<view class="song-container">
  <wxs module="filter" src="/utils/filter-wxs/filter.wxs">
  </wxs>
  <!-- 头部 -->
  <view class="header">
  <!-- 播放全部 -->
    <view class="left">
      <view class="icon iconfont icon-shipin1">
      </view>
      <view class="text">
        播放全部
      </view>
      <view class="nums">
        ({{songInfo.total}})
      </view>
    </view>
    <view class="right">
      <!-- 多选按钮 -->
      <view class="icon iconfont icon-duoxuan">
      </view>
    </view>
  </view>
  <!-- 歌曲列表 -->
  <scroll-view scroll-y class="list ">
    <view class="list-item active-song" wx:for="{{songInfo.list}}" wx:key="resourceId">

      <!-- 正在播放歌曲标识图标 -->
      <view class=" iconfont active-song-icon icon-yinle">

      </view>
      <!-- 左 -->
      <view class="left">
        <view class="name single-line-overflow">
          <!-- 我知道 -->
          {{item.data.name}}
        </view>
        <view class="info single-line-overflow">
          <!-- 七十二时 -->
          {{filter.getAuthorName(item.data.ar)}}
          <text wx:if="{{item.data.alia[0]}}">|</text>
          {{item.data.alia[0]}}
        </view>
      </view>
      <!-- 右侧 -->
      <view class="right">
        <view wx:if="{{item.data.mv}}" class="video iconfont icon-shipin">

        </view>
        <view class="more iconfont icon-androidgengduo">

        </view>
      </view>

    </view>
  </scroll-view>
</view>